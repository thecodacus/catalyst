# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/catalyst
MONGODB_DB=catalyst

# JWT Secret - CHANGE THIS IN PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Redis Connection (for caching and queues)
REDIS_URL=redis://localhost:6379

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# CodeSandbox API (for VM management)
CODESANDBOX_API_KEY=your-codesandbox-api-key
# CODESANDBOX_TEMPLATE_ID=your-template-id # Optional, defaults to Universal template

# AI Configuration (choose one)
# Option 1: OpenAI
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_MODEL=gpt-4-turbo-preview
# OPENAI_BASE_URL=https://api.openai.com/v1

# Option 2: Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-3-5-sonnet-latest
# Available models: claude-3-5-sonnet-latest, claude-3-5-haiku-latest, claude-3-opus-latest
# Or use environment variables compatible with OpenAI client:
# OPENAI_API_KEY=your-anthropic-api-key
# OPENAI_BASE_URL=https://api.anthropic.com/v1
# OPENAI_MODEL=claude-3-5-sonnet-latest

# Option 3: OpenRouter (Access 100+ LLMs with one API)
# OPENROUTER_API_KEY=your-openrouter-api-key
# OPENROUTER_MODEL=openai/gpt-4-turbo-preview
# OPENROUTER_APP_NAME=Catalyst
# OPENROUTER_APP_URL=http://localhost:3000
# Popular models: openai/gpt-4-turbo-preview, anthropic/claude-3-opus, google/gemini-pro, meta-llama/llama-2-70b-chat

# Option 4: Google Gemini
# GEMINI_API_KEY=your-gemini-api-key

# Option 5: Custom OpenAI-compatible endpoint
# OPENAI_API_KEY=your-api-key
# OPENAI_BASE_URL=https://your-custom-endpoint.com/v1
# OPENAI_MODEL=your-model-name

# Git Integration
# Option 1: GitHub OAuth App (Recommended for production)
# Create OAuth App at: https://github.com/settings/developers
# Homepage URL: http://localhost:3000
# Authorization callback URL: http://localhost:3000/api/auth/github/callback
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Option 2: GitHub Personal Access Token (for development)
# Generate at: https://github.com/settings/tokens
# GITHUB_TOKEN=your-github-personal-access-token
# GITHUB_USERNAME=your-github-username
# GITHUB_EMAIL=your-github-email

# GitLab Personal Access Token (optional)
# GITLAB_TOKEN=your-gitlab-personal-access-token
# GITLAB_USERNAME=your-gitlab-username
# GITLAB_EMAIL=your-gitlab-email

# Sandbox Management
# Enable automatic cleanup of inactive sandboxes
ENABLE_SANDBOX_CLEANUP=true
# How often to run cleanup (in minutes)
SANDBOX_CLEANUP_INTERVAL_MINUTES=15
# Mark sandboxes inactive after this time (in minutes)
SANDBOX_INACTIVE_THRESHOLD_MINUTES=30
# Optional: Token to protect the cleanup API endpoint
# SANDBOX_CLEANUP_TOKEN=your-secret-cleanup-token